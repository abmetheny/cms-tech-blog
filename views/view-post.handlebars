<div class="card my-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h4>{{post.title}}</h4>
    <p class="m-0">
        Posted by {{post.user.username}} on {{format_date post.date_created}}
    </p>
  </div>
  <div class="card-body">
    {{post.content}}
  </div>
</div>

  {{#if post.comments}}
  <div class="card my-4">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h4>Comments</h4>
    </div>
    <div class="card-body">
        {{#each post.comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash; {{user.username}}, {{format_date date_created}}
            </p>
          </div>
        {{/each}}
      </div>
  </div>
  {{/if}}

<form id="new-comment-form" class="card">
  <div class="card-header">
      <h4>Add New Comment</h4>
    </div>
  <div class="mb-3 card-body">
    <input type="hidden" name="post-id" value="{{post.id}}" />
    <textarea name="comment-body" class="form-control" placeholder="Add your comment here..."></textarea>
  </div>
  <button type="submit" class="btn btn-dark mb-2">Submit</button>
</form>

<script src="/js/comment.js"></script>