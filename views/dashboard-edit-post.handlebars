<div class="card my-4">
  <div class="card-header">
    <h2>Edit Post</h2>
  </div>
  <form id="edit-post-form" class="card-body">
    <input type="hidden" name="post-id" value="{{post.id}}" />
    <label for="post-title" class="form-label">Title</label>
    <input type="text" class="form-control" name="post-title" value="{{post.title}}">
    <label for="post-body" class="form-label">Content</label>
    <textarea name="post-body" class="form-control">{{post.content}}</textarea>
    <button type="submit" class="btn btn-dark mt-2">Update</button>
    <button type="button" id="delete-btn" class="btn">Delete</button>
  </form>
</div>

<script src="/js/edit.js"></script>