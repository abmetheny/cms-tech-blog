{{#each posts}}
<div class="card my-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h4><a href="/post/{{id}}">{{title}}</a></h4>
    <p class="m-0">
        Posted by {{user.username}} on {{format_date date_created}}
    </p>
  </div>
  <div class="card-body">
    {{content}}
  </div>
</div>
{{/each}}